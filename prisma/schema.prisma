generator client {
  provider = "prisma-client-js"
  binaryTargets = ["native", "linux-musl-openssl-3.0.x"]
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

// User Roles
enum Role {
  SUPER_ADMIN
  ADMIN
  TEACHER
  STUDENT
}

enum AttendanceStatus {
  PRESENT
  ABSENT
  PENDING
  EXCUSED
}

enum SessionType {
  ONLINE
  ONSITE
}

model User {
  id            String    @id @default(cuid())
  name          String?
  email         String    @unique
  emailVerified DateTime?
  image         String?
  role          Role      @default(STUDENT)
  
  organizationId String?
  organization   Organization? @relation(fields: [organizationId], references: [id])

  accounts      Account[]
  sessions      Session[]
  
  // Relations
  teachingSessions   ClassSession[] @relation("SessionTeacher")
  teachingClassrooms Classroom[] @relation("ClassroomTeachers")
  attendances        Attendance[]
  signatureTokens    SignatureToken[]
  enrollments        ClassroomEnrollment[] @relation("StudentEnrollments")

  createdAt DateTime @default(now())
  updatedAt DateTime @updatedAt
}

model Organization {
  id          String   @id @default(cuid())
  name        String
  domain      String?  @unique // For auto-joining based on email domain if needed
  
  // Settings
  googleServiceAccountJson String? // Encrypted or stored as JSON string
  smtpConfig               Json?   // { host, port, user, pass, secure }

  users       User[]
  classrooms  Classroom[]

  createdAt DateTime @default(now())
  updatedAt DateTime @updatedAt
}

model Classroom {
  id             String       @id @default(cuid())
  name           String
  description    String?
  
  // Public sharing
  shareEnabled   Boolean      @default(false)
  shareToken     String?      @unique
  
  organizationId String
  organization   Organization @relation(fields: [organizationId], references: [id])
  
  teachers       User[]       @relation("ClassroomTeachers")
  sessions       ClassSession[]
  resources      Resource[]
  enrollments    ClassroomEnrollment[]
  
  // Settings
  signatureEnabled Boolean @default(true)
  locationOnSite   String?
  locationOnline   String?
  locationOnline2  String?

  createdAt DateTime @default(now())
  updatedAt DateTime @updatedAt
}

model ClassSession {
  id          String      @id @default(cuid())
  title       String?
  type        SessionType @default(ONSITE)
  startTime   DateTime
  endTime     DateTime
  
  meetingLink        String?
  isOnline           Boolean @default(false)
  calendarEventId    String?
  
  // Notification settings
  reminderEnabled       Boolean @default(true)
  reminderHoursBefore   Int     @default(24) // Hours before class to send reminder
  reminderMinutesBefore Int     @default(0)  // Minutes before class to send reminder
  signatureMinutesBefore Int    @default(5)  // Minutes before class to send signature email
  pin                    String?      // PIN for teacher to unlock device sharing mode
  teacherSignature       String?      // Base64 signature data for the teacher

  classroomId String
  classroom   Classroom @relation(fields: [classroomId], references: [id])
  
  teacherId   String?
  teacher     User?     @relation("SessionTeacher", fields: [teacherId], references: [id], onDelete: SetNull)
  
  attendances      Attendance[]
  signatureTokens  SignatureToken[]

  createdAt DateTime @default(now())
  updatedAt DateTime @updatedAt

  @@index([startTime])
  @@index([teacherId])
  @@index([classroomId])
}

model SignatureToken {
  id        String   @id @default(cuid())
  token     String   @unique @default(cuid())
  
  studentId String
  student   User     @relation(fields: [studentId], references: [id], onDelete: Cascade)
  
  sessionId String
  session   ClassSession @relation(fields: [sessionId], references: [id])
  
  expiresAt DateTime
  usedAt    DateTime?
  emailSentAt DateTime?
  
  createdAt DateTime @default(now())
  
  @@index([token])
  @@index([sessionId, studentId])
}

model Attendance {
  id        String           @id @default(cuid())
  status    AttendanceStatus @default(PENDING)
  
  signatureUrl String? // URL to the signature image
  proofUrl     String? // URL to the justification file (if absent)
  
  signedAt  DateTime?
  ipAddress String?

  sessionId String
  session   ClassSession @relation(fields: [sessionId], references: [id])
  
  studentId String
  student   User   @relation(fields: [studentId], references: [id], onDelete: Cascade)

  createdAt DateTime @default(now())
  updatedAt DateTime @updatedAt

  @@unique([sessionId, studentId])
}

model Resource {
  id          String   @id @default(cuid())
  title       String
  description String?
  url         String
  type        String   // LINK, FILE, DOCUMENT
  pinned      Boolean  @default(false)
  
  classroomId String
  classroom   Classroom @relation(fields: [classroomId], references: [id])

  createdAt DateTime @default(now())
  updatedAt DateTime @updatedAt
}

model ClassroomEnrollment {
  id        String   @id @default(cuid())
  
  studentId String
  student   User     @relation("StudentEnrollments", fields: [studentId], references: [id], onDelete: Cascade)
  
  classroomId String
  classroom   Classroom @relation(fields: [classroomId], references: [id])
  
  enrolledAt DateTime @default(now())
  
  @@unique([studentId, classroomId])
  @@index([classroomId])
  @@index([studentId])
}

// Auth.js Models
model Account {
  userId            String
  type              String
  provider          String
  providerAccountId String
  refresh_token     String?
  access_token      String?
  expires_at        Int?
  token_type        String?
  scope             String?
  id_token          String?
  session_state     String?
 
  createdAt DateTime @default(now())
  updatedAt DateTime @updatedAt
 
  user User @relation(fields: [userId], references: [id], onDelete: Cascade)
 
  @@id([provider, providerAccountId])
}
 
model Session {
  sessionToken String   @unique
  userId       String
  expires      DateTime
  user         User     @relation(fields: [userId], references: [id], onDelete: Cascade)
 
  createdAt DateTime @default(now())
  updatedAt DateTime @updatedAt
}
 
model VerificationToken {
  identifier String
  token      String
  expires    DateTime
 
  @@id([identifier, token])
}

